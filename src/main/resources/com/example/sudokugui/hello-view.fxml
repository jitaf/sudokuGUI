<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sudokugui.SudokuController">
    <top>
        <HBox spacing="10" alignment="center" style="-fx-padding: 10;">
            <Button text="Solve" onAction="#onSolve"/>
            <Button text="Clear" onAction="#onClear"/>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="grid" hgap="1" vgap="1" style="-fx-background-color: lightgray; -fx-padding: 10;">
        </GridPane>
    </center>
</BorderPane>
